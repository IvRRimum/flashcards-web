<div class="row">
  <div class="col-12 mb-3">
    <h3>Found <%=@flashcards.count%> flashcards for query: "<%=params[:q]%>"</h3>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <% @flashcard_categories.each do |c| %>
      <h5><%= c.title %></h5>
      <hr />
      <div class="row">
        <% @flashcards.each do |f| %>
          <% if f.flashcard_category_id == c.id %>
            <div class="col-12 col-lg-3">
              <%= link_to flashcard_path(f.id), class: "text-decoration-none" do %>
                <%= render f %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
